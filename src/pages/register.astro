---
import MainLayout from "@/layouts/MainLayout.astro";
import FormComponent from "@/components/FormComponent";
import { Image } from "astro:assets";
import banner from "../images/hero-bg-2.png";
---

<MainLayout>
  <section class="container py-28">
    <div class="lg:grid lg:grid-cols-2 lg:gap-5 lg:bg-white lg:p-9 lg:mx-auto">
      <div
        class="py-6 px-5 rounded-md bg-white max-w-xl mx-auto lg:max-w-full lg:mx-0"
      >
        <h1 class="font-serif font-bold text-2xl mb-4">
          Reservez votre ticket
        </h1>
        <p class="text-gray-500 font-sans mb-4">
          Enregistrez vous afin d'obtenir votre pass et avoir accèe au plus
          grand rendez vous de developpeur au Congo Brazzaville
        </p>
        <FormComponent client:load />
      </div>
      <div
        class="hidden lg:grid lg:grid-rows-[auto minmax(0,1fr)] lg:p-7 lg:rounded-md lg:bg-white"
      >
        <Image
          src={banner}
          alt="banner"
          class="w-full h-full object-cover rounded-t-xl"
        />
        <div
          class="w-full bg-gray-300 rounded-b-xl flex flex-col justify-center"
        >
          <div class="max-h-9 overflow-hidden bg-red-200 mb-8">
            <div
              class="flex flex-col items-center justify-center text-2xl font-sans font-semibold transition-all"
              data-text-group
            >
              <span>Un Salon</span>
              <span>Vingt Conférences</span>
              <span>Un Hackathon Coding</span>
            </div>
          </div>
          <div class="flex items-center justify-center space-x-3" data-dots>
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  const textContainer = document.querySelector(
    "[data-text-group]"
  ) as HTMLDivElement;
  const dots = [
    ...document.querySelectorAll("[data-dots] span"),
  ] as HTMLSpanElement[];

  function textSlider(index: number) {
    textContainer.style.transform = `translateY(${-(index - 1) * 2.1}rem)`;

    dots.forEach((dot) => dot.classList.remove("active-dot"));
    dots[index - 1].classList.add("active-dot");
  }

  let currentIndex = 1;
  const intervalTime = 3000;

  function autoSlider() {
    textSlider(currentIndex);
    currentIndex = (currentIndex % dots.length) + 1;
  }

  let interval = setInterval(autoSlider, intervalTime);

  // Arrêtez le carrousel lorsque l'utilisateur interagit avec les points
  dots.forEach((dot, index) => {
    dot.addEventListener("click", () => {
      clearInterval(interval);
      textSlider(index + 1);
      currentIndex = index + 1;
      interval = setInterval(autoSlider, intervalTime);
    });
  });
</script>
