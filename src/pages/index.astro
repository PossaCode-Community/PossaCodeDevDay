---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import { MapPin } from "lucide-react";
import { CalendarDays } from "lucide-react";
import salon from "../images/salon.jpg";
import conf from "../images/conference.jpg";
import hackathon from "../images/hackathon.webp";
import hack2 from "../images/hackathon_2.jpeg";

import Hero from "@/components/ui/Hero.astro";
---

<MainLayout>
  <Hero />
  <section class="py-4 bg-gray-950">
    <div class="container">
      <div
        class="space-y-4 md:grid md:space-y-0 md:grid-cols-3 md:justify-around"
      >
        <div class="numberStat">
          <span class="text-5xl">20+</span>
          <h4 class="text-primaryOrange">Conférences</h4>
        </div>

        <div class="numberStat">
          <span class="text-5xl">20+</span>
          <h4 class="text-primaryOrange">Exposants</h4>
        </div>

        <div class="numberStat border-none">
          <span class="text-5xl">50+</span>
          <h4 class="text-primaryOrange">Développeurs</h4>
        </div>
      </div>
    </div>
  </section>
  <section class="py-28 bg-white">
    <div class="container flex flex-col gap-9 md:flex-row">
      <div class="md:w-1/2">
        <h3 class="text-2xl text-primaryOrange font-bold font-serif mb-3">
          A propos
        </h3>
        <h2 class="text-4xl text-darkBlue uppercase font-serif font-bold mb-5">
          Du plus grand rendez-vous des devs 2024
        </h2>
        <p class="font-sans font-semibold text-gray-500 text-lg mb-10">
          PossaCode Dev Day est une conférence majeure dédié à la communauté des
          dévéloppeurs en République du Congo. L'évènement vise à rassembler
          plus de 150 dévéloppeurs passinnés, des experts en technologie et des
          acteurs clés de l'industrie pour partager des connaissances, découvrir
          les dernières tendances et stimuler l'innovation
        </p>
        <div class="flex flex-col gap-2 mb-5 md:flex-row md:gap-5">
          <div class="flex items-center gap-3">
            <div class="self-start pt-1">
              <MapPin className=" size-8 stroke-primaryOrange" />
            </div>
            <div class="flex flex-col gap-1">
              <span class="uppercase text-xl font-bold font-serif">lieu</span>
              <p class="text-gray-500 text-sm">Brazzaville, Congo R.</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="self-start pt-1">
              <CalendarDays className=" size-8 stroke-primaryOrange" />
            </div>
            <div class="flex flex-col gap-1">
              <span class="uppercase text-xl font-bold font-serif">Date</span>
              <p class="text-gray-500 text-sm">Du 20 au 21 Juillet 2024</p>
            </div>
          </div>
        </div>
      </div>
      <div class="relative h-96 md:h-auto md:w-1/2">
        <Image
          src={hackathon}
          alt="banner"
          class="object-cover max-w-full h-full"
        />
        <div
          class="absolute bottom-0 left-0 top-2/4 right-2/4 z-10 border-r-8 border-t-8 border-white"
        >
          <Image
            src={hack2}
            alt="hackathon banner"
            class="object-cover max-w-full h-full"
          />
        </div>
      </div>
    </div>
  </section>
</MainLayout>
